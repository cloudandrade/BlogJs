<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Categoria: {{categoria.nome}}</small>
            </br>
            
            <small>Data: {{data}}</small>
            </br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-warning mt-2">Editar</button> </a>
             <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-2">Excluir</button> </a>

        </div>
    </div>
{{else}}
    <p>Nehuma postagem registrada!</p>
{{/each}}